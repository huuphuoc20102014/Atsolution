                                    var recruitementModel = await AT.Helpers.RecruitementHelper.GetDataRecruitement(webContext);
                                    @foreach (var item in recruitementModel.Recruitement)
                                    {*@
                                        @*<div class="post-info-container">
                                            <div class="post-info">
                                                <h2><a class="main-color" href="~/chi-tiet-tuyen-dung">@item.Title</a></h2>
                                                <ul class="post-meta">
                                                    <li class="meta-user"><i class="fa fa-user"></i>By: <a href="#">John Martin</a></li>
                                                    <li><i class="fa fa-folder-open"></i>Category: <a href="#">Corporate News</a></li>

                                                </ul>
                                            </div>
                                        </div>*@

                                        <blockquote>
                                            <p>Phasellus tristique libero vel justo aliquam pellentesque. Maecenas vestibulum velit est, in tincidunt arcu fermentum id. Morbi ipsum arcu, iaculis nec sapien vel, egestas viverra eros. Phasellus ac dolor elit.</p>
                                            <span>- Mark Henry "Google.com"</span>
                                        </blockquote>

                                        <div class="share-post">
                                            <span class="sh">Share this post on:</span>
                                            <div id="shareme" data-text="Share this post"></div>
                                        </div>
                                    @*}

                                }*@
                            </article>
                        </div><!-- .post-item end -->

                    </div>
                </div>
                <aside class="cell-3 right-sidebar">
                    <ul class="sidebar_widgets">


                        <li class="widget r-posts-w fx" data-animate="fadeInRight">
                            <h3 class="widget-head">chi tiết tuyển dụng</h3>
                            <div class="widget-content">
                                <ul>
                                    @{ int maxDay = 0;
                                        int maxMonth = 0;
                                        int maxYear = 0;
                                        foreach (var item in Model.listRecruitement)
                                        {
                                            if (item.CreatedDate.Day > maxDay)
                                            {
                                                maxDay = item.CreatedDate.Day;
                                            }
                                            if (item.CreatedDate.Month > maxMonth)
                                            {
                                                maxMonth = item.CreatedDate.Month;
                                            }
                                            if (item.CreatedDate.Year > maxYear)
                                            {
                                                maxYear = item.CreatedDate.Year;
                                            }
                                        }
                                    }
                                    @foreach (var item in Model.listRecruitement)
                                    {
                                        if (item.CreatedDate.Day > (maxDay - 3) && item.CreatedDate.Month == maxMonth && item.CreatedDate.Year == maxYear)
                                        {
                                            <li>
                                                <div class="post-img">
                                                    <img src="~/Images/News/@item.ImageSlug" alt="">
                                                </div>
                                                <div class="widget-post-info">
                                                    <h4>
                                                        <a href="~/chi-tiet-tin-tuc?id=@item.Id &type=@item.FkNewsTypeId">
                                                            @item.Title
                                                        </a>
                                                    </h4>
                                                    <div class="meta">
                                                        <span><i class="fa fa-clock-o"></i>@item.CreatedDate</span>

                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    }

                                </ul>
                            </div>
                        </li>

                        <li class="widget blog-cat-w fx" data-animate="fadeInRight">
                            <h3 class="widget-head">thông tin và tuyển dụng</h3>
                            <div class="widget-content">
                                <ul class="list list-ok alt">
                                    @{
                                        foreach (var item in Model.listRecruitement)
                                        {
                                            int dem = 0;
                                            <li>

                                                @foreach (var item1 in Model.listRecruitement)
                                                {
                                                    if (item.Id == item1.FkNewsTypeId)
                                                    { dem += 1; }
                                                }
                                                <a href="blog-single.html">@item.Title</a><span>[@dem]</span>
                                            </li>
                                        }
                                    }


                                </ul>
                            </div>
                        </li>



                        <li class="widget tags-w fx" data-animate="fadeInRight">
                            <h3 class="widget-head">Tag Cloud</h3>
                            <div class="widget-content">
                                <div class="tags">
                                    <a href="#">Design</a>
                                    <a href="#">User interface</a>
                                    <a href="#">Performance</a>
                                    <a href="#">Development</a>
                                    <a href="#">WordPress</a>
                                    <a href="#">SEO</a>
                                    <a href="#">Joomla</a>
                                    <a href="#">ASP.Net</a>
                                    <a href="#">SharePoint</a>
                                </div>
                            </div>
                        </li>

                        <li class="widget flickr-stream-w fx" data-animate="fadeInRight">
                            <h3 class="widget-head">Flickr Stream</h3>
                            <div class="widget-content">
                                <ul id="flickrFeed-inner"></ul>
                            </div>
                        </li>
                    </ul>
                </aside>
            </div>
        </div>
    </div>

</div>

