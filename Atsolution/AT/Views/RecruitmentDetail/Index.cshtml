@model RecruitmentDetailViewModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject AT.Efs.Entities.WebAtSolutionContext webContext


@{
    ViewBag.Title = "Chi Tiết tuyển dụng";
}

