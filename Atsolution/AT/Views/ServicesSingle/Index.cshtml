        </div>
    </div>

    <div class="sectionWrapper">
        <div class="container">
            <div class="row">
                <div class="cell-9">
                    <div class="blog-posts">
                        <div class="post-item fx" data-animate="fadeInLeft">
                           
                            <article class="post-content">
                                <div class="post-info-container">
                                    <h1 class="main-color">@Model.service.ServiceName</h1>

                                    <div class="post-info">
                                        <ul class="post-meta">
                                            <li class="meta-user"><i class="fa fa-user"></i>Bởi: <a href="#">@Model.service.CreatedBy</a></li>
                                            </ul>
                                    </div>
                                </div>
                                <p>
                                    @Model.service.ShortDescriptionHtml
                                </p>
                                <blockquote>
                                    <p>Người tạo</p>
                                    <span>- @Model.service.CreatedBy"</span>
                                </blockquote>
                                <p>
                                    @Model.service.LongDescriptionHtml
                                </p>
                                <div class="post-tags">
                                    <i class="fa fa-tags"></i><span>Thẻ: </span><a href="#">@Model.service.Tags</a>
                                </div>
                                <div class="share-post">
                                    <span class="sh">Chia sẻ lên:</span>
                                    <div id="shareme" data-text="Share this post"></div>
                                </div>
                            </article>
                        </div><!-- .post-item end -->
                        
                    </div>
                </div>
                <aside class="cell-3 right-sidebar">
                    <ul class="sidebar_widgets">
                    
                        <li class="widget r-posts-w fx" data-animate="fadeInRight">
                            <h3 class="widget-head">Bài Viết Gần Đây</h3>
                            <div class="widget-content">
                                <ul>
                                    @foreach (var item in Model.listService.Take(3))
                                    {
                                        <li>
                                            <div class="post-img">
                                                <img src="~/Images/News/@item.ImageSlug" alt="">
                                            </div>
                                            <div class="widget-post-info">
                                                <h4>
                                                    <a href="~/chi-tiet-dich-vu?id=@item.Id">
                                                        @item.ServiceName
                                                    </a>
                                                </h4>
                                                <div class="meta">
                                                    <span><i class="fa fa-clock-o"></i>@item.CreatedDate</span>

                                                </div>
                                            </div>
                                        </li>
                                    }
