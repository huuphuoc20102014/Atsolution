@section scripts{
    @{
        var titleimg = await AT.Helpers.MenuHelper.GetDataMenu(webContext);
        foreach (var item in titleimg.listMenu)
        {
            if (item.SlugName == "gioi-thieu")
            {
                <style>
                .title-1 {
                     background: #fff url('../@item.ImageSlug') no-repeat 50% 50%;
                }
                </style>
            }
        }
    }
