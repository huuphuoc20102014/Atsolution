    <div class="sectionWrapper gry-pattern">
        <div class="container team-boxes">
            <h3 class="block-head">Thành Viên Công Ty</h3>
            @foreach (var item in Model.listPeople)
            {
                if (item.RowStatus != 1)
                {
                    <div class="cell-3 fx" data-animate="bounceIn">
                        <div class="team-box">
                            <div class="team-img">
                                <img alt="" src="~/Image/@Url.Content(@item.Img)">
                                <h3>@item.Name</h3>
                            </div>
                            <div class="team-details">
                                <h3 class="gry-bg">@item.Name</h3>
                                <div class="t-position">@item.Job</div>
                                <p>@item.JobIntroduction</p>
                                <div class="team-socials">
                                    <ul>
                                        <li><a href="#" title="facebook"><span class="fa fa-facebook"></span></a></li>
