@model FAQViewModel
@{ 
    ViewBag.Title = "Hỏi đáp";
}

<div id="contentWrapper">
    <div class="page-title title-1">
        <div class="container">
            <div class="row">
                <div class="cell-12">
                    <h1 class="fx" data-animate="fadeInLeft">CÂU HỎI <span>Thường Gặp</span></h1>
                    <div class="breadcrumbs main-bg fx" data-animate="fadeInUp">
                        <span class="bold">Trang:</span><a href="~/Home">Trang chủ</a><span class="line-separate">/</span><span>FAQ</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sectionWrapper">
        <div class="container">
            <div class="row">
                <div class="cell-9">
                    <h3 class="block-head">Câu Hỏi Thường Gặp</h3>
                    <p class="hint">Tại đây bạn có thể xem những câu hỏi thường gặp về công ty chúng tôi.</p>

                    <ul id="accordion" class="accordion">
                        @foreach (var item in Model.faqList)
                        {
                            <li>
                                <h3 class="skew-25"><a href="#"><span class="skew25">@item.Faqquestion ?</span></a></h3>
                                <div class="accordion-panel active">
                                    @item.Faqreply
                                </div>
                            </li>
                        }

                    </ul>
                </div>
