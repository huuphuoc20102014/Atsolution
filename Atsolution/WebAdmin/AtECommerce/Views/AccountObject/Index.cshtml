
@inject IStringLocalizer<SharedResources> SharedLocalizer
@inject IViewLocalizer Localizer
@inject IStringLocalizer<GenEf.Efs.Entities.AccountObject> EntityLocalizer
@inject IStringLocalizer<BaseEntityResources> BaseEntityLocalizer
@{
    ViewData["Title"] = SharedLocalizer["ViewTitle_List"] + " " + EntityLocalizer["Tài Khoản"];
    var parentItem = ViewData["ParentItem"] as GenEf.Efs.Entities.AccountObject;
    if (parentItem != null)
    {
        ViewData["Title"] = (string)ViewData["Title"] + " : " + parentItem.AccountObjectCode + " | " + parentItem.AccountObjectName;
    }
}

<div class="container">
    <h4>
        @SharedLocalizer["ViewTitle_List"] @EntityLocalizer["Tài khoản"]
        @if (parentItem != null)
        {
            @:: <span class="text-warning">@parentItem.AccountObjectCode | @parentItem.AccountObjectName</span>
        }
    </h4>
    <hr />

    <p>
        <a asp-action="Create" class="btn btn-primary">@SharedLocalizer["Btn_CreateNew"]</a>
        @if (parentItem != null)
        {
            <a asp-action="Sort" asp-route-id="@parentItem.AccountObjectId" class="btn btn-primary">@SharedLocalizer["Btn_SortIndex"]</a>
            <a asp-action="Index" asp-route-id="" class="btn btn-primary">@SharedLocalizer["Btn_ListAll"]</a>
        }
        else
        {
            <a asp-action="Sort" class="btn btn-primary">@SharedLocalizer["Btn_SortIndex"]</a>
        }
    </p>
</div>
@(Html.Kendo().Grid<AccountObjectDetailsViewModel>()
            .Name("gridAccountObject")
            .Columns(columns =>
            {
                columns.Bound(c => c.Id).Title(" ").Width(180).Locked(true).Filterable(false).Sortable(false).ClientTemplate(
               "<a class=\"btn btn-success\" data-toggle=\"tooltip\" title=\"" + SharedLocalizer["Ttip_Detail"] + "\"" +
                   "href='" + Url.Action("Details", ((string)ViewData["ControllerNameForGrid"])) + "/#= " + nameof(AccountObjectDetailsViewModel.Id) + " #'" +
               "><i class=\"far fa-eye\"></i></a> " +

               "<a class=\"btn btn-success\" data-toggle=\"tooltip\" title=\"" + SharedLocalizer["Ttip_Edit"] + "\"" +
                   "href='" + Url.Action("Edit", ((string)ViewData["ControllerNameForGrid"])) + "/#= " + nameof(AccountObjectDetailsViewModel.Id) + " #'" +
               "><i class=\"far fa-pencil\"></i></a> " +

               "<a class=\"btn btn-danger\" data-toggle=\"tooltip\" title=\"" + SharedLocalizer["Ttip_Delete"] + "\"" +
                   "href='" + Url.Action("Delete", ((string)ViewData["ControllerNameForGrid"])) + "/#= " + nameof(AccountObjectDetailsViewModel.Id) + " #'" +
               "><i class=\"far fa-trash-alt\"></i></a> "
           );
                columns.Bound(c => c.RowStatus).Title("RowStatus").Width(150);
                columns.Bound(c => c.ImageSlug).Title("Hình ảnh").Width(150).Locked(true).Filterable(false).Sortable(false).ClientTemplate(

            "<img class=\"border border-primary\" id=\"img_ImageSlug\" width=\"100\" src='" + "Image/" + "#= ImageSlug #'" +
            "/>"

        );

                columns.Bound(c => c.AccountObjectCode).Title("Mã").Width(200);
                columns.Bound(c => c.AccountObjectName).Title("Họ Tên").Width(200);
                columns.Bound(c => c.UserLogin).Title("Tên đăng nhập").Width(200);
                columns.Bound(c => c.BirthDate).Title("Ngày sinh").Width(200);
                columns.Bound(c => c.BirthPlace).Title("Nơi sinh").Width(150);
                columns.Bound(c => c.Address).Title("Địa chỉ").Width(200);
                columns.Bound(c => c.Mobile).Title("Số điện thoại").Width(200);
                columns.Bound(c => c.EmailAddress).Title("Email").Width(200);
                columns.Bound(c => c.Country).Title("Quốc gia").Width(200);
                columns.Bound(c => c.ProvinceOrCity).Title("Tỉnh / Thành phố").Width(200);
                columns.Bound(c => c.District).Title("Quận / Huyện").Width(200);
                columns.Bound(c => c.WardOrCommune).Title("Phường / Xã").Width(200);
                columns.Bound(c => c.FkAccountObjectType).Title("Loại tài khoản").Width(200);
                columns.Bound(c => c.CreatedBy).Title("Tạo bởi").Width(200);
                columns.Bound(c => c.CreatedDate).Title("Ngày tạo").Width(200);
                columns.Bound(c => c.CreatedDate).Title("Ngày tạo").Width(200);
                columns.Bound(c => c.ModifiedBy).Title("Người sửa").Width(200);
                columns.Bound(c => c.ModifiedDate).Title("Ngày sửa").Width(200);
            })
            .HtmlAttributes(new { style = "height: 550px;" })
            .Resizable(r => r.Columns(true))
            .Scrollable()
            .Groupable()
            .Sortable()
            .Filterable()
            .Pageable(pageable => pageable
                .Refresh(true)
                .PageSizes(new int[] { 50, 100, 200, 500, 1000 })
                .ButtonCount(5))
            .DataSource(dataSource => dataSource
                .Ajax()
                .Read(read => read.Action("Index_Read", ((string)ViewData["ControllerNameForGrid"])))
                .PageSize(50)
            )
)
<p>
</p>
<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</p>

