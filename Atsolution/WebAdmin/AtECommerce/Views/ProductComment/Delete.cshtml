@model GenEf.Efs.Entities.ProductComment
@{
    ViewData["Title"] = "Xóa Bình luận";
}



<h4>Xóa Bình luận</h4>
<h5 class="text-danger">Bạn có chắc muốn xóa Bình luận này?</h5>
<hr />

<form asp-action="Delete">
    <input type="hidden" name="Id" value="@Model?.Id" />
    <input type="hidden" asp-for="RowVersion" />
    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
        </div>
        <div class="col-md-7">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="k-button">Chi tiết</a>
            <a asp-action="Index" class="k-button">Quay lại danh sách</a>
        </div>
    </div>
</form>



<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
