@model GenEf.Efs.Entities.NewsType
@{
    ViewData["Title"] = "Delete";
}

<h4>Xoá loại tin tức</h4>
<h5 class="text-danger">Bạn có chắc muốn xoá loại tin này chưa?</h5>
<hr />

<form asp-action="Delete">
    <input type="hidden" name="Id" value="@Model?.Id" />
    <input type="hidden" asp-for="RowVersion" />
    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
        </div>
        <div class="col-md-7">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Edit" asp-route-id="@Model.SlugName" class="btn btn-primary">Sửa</a>
            <a asp-action="Details" asp-route-id="@Model.SlugName" class="k-button">Chi tiết</a>
            <a asp-action="Index" class="k-button">Quay lại danh sách</a>
        </div>
    </div>
</form>

