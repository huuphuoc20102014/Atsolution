@model GenEf.Efs.Entities.ImageSlide
@{
    ViewData["Title"] = "Xóa hình ảnh";
}



    <h4>Xóa hình ảnh</h4>
<h5 class="text-danger">Bạn có chắc muốn xóa hình ảnh này?</h5>
<hr />

<form asp-action="Delete">
    <input type="hidden" name="Id" value="@Model?.Id" />
    <input type="hidden" asp-for="RowVersion" />
    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
        </div>
        <div class="col-md-7">
            <input type="submit" value="Xoá" class="btn btn-danger" />
            <a asp-action="Edit" asp-route-id="@Model.SlugName" class="btn btn-primary">Sửa</a>
            <a asp-action="Details" asp-route-id="@Model.SlugName" class="k-button">Chi tiết</a>
            <a asp-action="Index" class="k-button">Quay lại danh sách</a>
        </div>
    </div>
</form>



<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Hình ảnh :
    </div>
    <div class="col-md-7">
        <img width="200" class="border border-primary" asp-for="Image" id="img_Thumbnail_Image" src="~/Image/@Url.Content(Model?.Thumbnail)" />
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Tên :
    </div>
    <div class="col-md-7">
