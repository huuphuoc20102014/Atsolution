@model GenEf.Efs.Entities.News
@{
    ViewData["Title"] = "Delete";
}



<h4>Xoá bài đăng</h4>
<h5 class="text-danger">Bạn có chắc chắn muốn xoá bài đăng này không nhỉ?</h5>
<hr />

<form asp-action="Delete">
    <input type="hidden" name="Id" value="@Model?.Id" />
    <input type="hidden" asp-for="RowVersion" />
    <div class="row form-group">
        <div class="col-md-3 text-md-right ">
        </div>
        <div class="col-md-7">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Edit" asp-route-id="@Model.SlugTitle" class="btn btn-primary">Sửa</a>
            <a asp-action="Details" asp-route-id="@Model.SlugTitle" class="k-button">Chi tiết</a>
            <a asp-action="Index" class="k-button">Quay lại danh sách</a>
        </div>
    </div>
</form>


<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Tiêu đề :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.Title)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        SEO :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.SlugTitle)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Auto SEO :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.AutoSlug)
    </div>
</div>


<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Mô tả ngắn :
    </div>
    <div class="col-12 border border-primary">
        @Html.Raw(Model.ShortDescriptionHtml)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Mô tả dài :
    </div>
    <div class="col-12 border border-primary">
        @Html.Raw(Model.LongDescriptionHtml)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Hình ảnh :
    </div>
    <div class="col-md-7">
        <img width="200" class="border border-primary" id="img_Thumbnail" src="~/Image/@Url.Content(Model?.ImageSlug)" />
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Thẻ (tag) :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.Tags)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        @Html.DisplayNameFor(model => model.KeyWord) :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.KeyWord)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        @Html.DisplayNameFor(model => model.MetaData) :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.MetaData)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Ghi chú :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.Note)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Người tạo :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.CreatedBy)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
