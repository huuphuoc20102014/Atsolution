@model GenEf.Efs.Entities.Category
@{
    ViewData["Title"] = "Details";
}



<h4>Chi tiết Loại sản phẩm</h4>
<hr />

<div class="row form-group">
    <div class="col-md-3 text-md-right ">
    </div>
    <div class="col-md-7">
        <a asp-action="Edit" asp-route-id="@Model.SlugName" class="btn btn-primary">Sửa</a>
        <a asp-action="Delete" asp-route-id="@Model.SlugName" class="btn btn-danger">Xoá</a>
        <a asp-action="Index" class="k-button">Quay lại danh sách</a>
    </div>
</div>



<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Mã :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.Code)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Tên :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.Name)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        SEO :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.SlugName)
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Auto SEO :
    </div>
    <div class="col-md-7">
        @Html.DisplayFor(model => model.AutoSlug)
    </div>
</div>


<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Hình ảnh :
    </div>
    <div class="col-md-7">
        <img width="200" class="border border-primary" asp-for="Image" id="img_Thumbnail_Image" src="/ImagesCategory/@Url.Content(Model?.Image)" />
    </div>
</div>

<div class="row form-group">
    <div class="col-md-3 text-md-right details-label">
        Thứ tự :
    </div>
    <div class="col-md-7">
